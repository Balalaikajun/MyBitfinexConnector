<Window x:Class="MyBitfinexConnector.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:MyBitfinexConnector.UI.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" MinHeight="60.96" />
        </Grid.RowDefinitions>

        <Label Content="Баланс:" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25"
               Width="54" Margin="0,1,0,0" Grid.Row="1" />

        <views:BalanceView DataContext="{Binding BalanceViewModel}" Grid.Row="1" Margin="0,25,0,10" />

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <views:PairsSelectorView
                Grid.Row="1" Grid.Column="0"
                DataContext="{Binding PairSelectorViewModel}"
                Margin="5,5,5,0" Height="55" VerticalAlignment="Top" />

            <views:TickerView
                Grid.Row="1" Grid.Column="0"
                DataContext="{Binding TickerViewModel}"
                Margin="5,65,5,10" />

            <TabControl
                Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"
                Margin="5,5,5,-15">

                <TabItem Header="Trades">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" MinHeight="27.96" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="Покупки:" FontWeight="Bold" Margin="0,0,0,2" />
                        <Label Grid.Row="0" Grid.Column="1" Content="Продажи:" FontWeight="Bold" Margin="0,0,0,2" />

                        <DataGrid
                            Grid.Row="1" Grid.Column="0"
                            ItemsSource="{Binding TradesViewModel.BuyTrades}"
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            HeadersVisibility="Column">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Пара" Binding="{Binding Pair}" />
                                <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat=N2}" />
                                <DataGridTextColumn Header="Сумма" Binding="{Binding Amount, StringFormat=G}" />
                                <DataGridTextColumn Header="Время"
                                                    Binding="{Binding Time, StringFormat=dd.MM.yyyy HH:mm:ss}" />
                            </DataGrid.Columns>
                        </DataGrid>

                        <DataGrid
                            Grid.Row="1" Grid.Column="1"
                            ItemsSource="{Binding TradesViewModel.SellTrades}"
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            HeadersVisibility="Column">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Пара" Binding="{Binding Pair}" />
                                <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat=N2}" />
                                <DataGridTextColumn Header="Сумма" Binding="{Binding Amount, StringFormat=G}" />
                                <DataGridTextColumn Header="Время"
                                                    Binding="{Binding Time, StringFormat=dd.MM.yyyy HH:mm:ss}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

                <TabItem Header="Candles">
                    <DataGrid
                        ItemsSource="{Binding CandlesViewModel.Candles}"
                        AutoGenerateColumns="False"
                        IsReadOnly="True"
                        HeadersVisibility="Column"
                        Margin="5"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Пара" Binding="{Binding Pair}" />
                            <DataGridTextColumn Header="Открытие" Binding="{Binding OpenPrice, StringFormat=N2}" />
                            <DataGridTextColumn Header="Закрытие" Binding="{Binding ClosePrice, StringFormat=N2}" />
                            <DataGridTextColumn Header="Макс." Binding="{Binding HighPrice, StringFormat=N2}" />
                            <DataGridTextColumn Header="Мин." Binding="{Binding LowPrice, StringFormat=N2}" />
                            <DataGridTextColumn Header="Объём" Binding="{Binding Volume, StringFormat=N2}" />
                            <DataGridTextColumn Header="Время"
                                                Binding="{Binding OpenTime, StringFormat=dd.MM.yyyy HH:mm:ss}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
            </TabControl>
        </Grid>
        <Grid Height="374" VerticalAlignment="Center" />
    </Grid>
</Window>